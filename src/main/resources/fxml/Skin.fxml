<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.SkinController"
      spacing="20"
      alignment="TOP_CENTER"
      prefWidth="600"
      prefHeight="700"
      style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);">

    <!-- Title -->
    <Label text="ðŸŽ¨ SKINS"
           style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #00d4ff;">
        <VBox.margin>
            <Insets top="30" bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Coins Display -->
    <Label fx:id="coinsLabel" text="ðŸ’° Coins: 0"
           style="-fx-font-size: 18px; -fx-text-fill: #f1c40f; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Paddle Skins -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Paddle Skins"
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <HBox fx:id="paddleSkinBox" spacing="15" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </HBox>
        
        <Button fx:id="selectPaddleButton" text="Select" prefWidth="150" prefHeight="40"
                style="-fx-font-size: 16px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
    </VBox>

    <Separator prefWidth="500" style="-fx-background-color: #34495e;"/>

    <!-- Ball Skins -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Ball Skins"
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <HBox fx:id="ballSkinBox" spacing="15" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </HBox>
        
        <Button fx:id="selectBallButton" text="Select" prefWidth="150" prefHeight="40"
                style="-fx-font-size: 16px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
    </VBox>

    <!-- Back Button -->
    <Button fx:id="backButton" text="â—€ Back" prefWidth="200" prefHeight="45"
            style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #2980b9; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-background-radius: 5px;">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
    </Button>

</VBox>