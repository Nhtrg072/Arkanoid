<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SelectModeController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-image: url('/backgrounds/background.png'); -fx-background-size: cover; -fx-background-position: center;">

    <!-- Title at top -->
    <VBox alignment="TOP_CENTER" spacing="20"
          AnchorPane.topAnchor="60.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Text text="SELECT MODE"
              style='-fx-font-size: 42px; -fx-font-weight: bold; -fx-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 12, 0, 0, 4);'/>
    </VBox>

    <!-- Horizontal ScrollPane for mode boxes -->
    <ScrollPane fx:id="modeScrollPane"
                AnchorPane.topAnchor="180.0"
                AnchorPane.bottomAnchor="140.0"
                AnchorPane.leftAnchor="150.0"
                AnchorPane.rightAnchor="150.0"
                style='-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;'
                hbarPolicy="ALWAYS"
                vbarPolicy="NEVER"
                fitToHeight="true"
                pannable="true">
        <content>
            <HBox fx:id="modeBox"
                  spacing="40"
                  alignment="CENTER_LEFT"
                  style='-fx-background-color: transparent; -fx-padding: 30;'>

      <!-- Story Mode -->
      <VBox fx:id="storyBox" alignment="CENTER" spacing="15" prefWidth="280.0" prefHeight="420.0"
       onMouseClicked="#openStory"
       style='-fx-background-color: transparent; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 5); -fx-cursor: hand;'>
          <StackPane prefWidth="260.0" prefHeight="360.0"
           style='-fx-background-image: url("/backgrounds/storymode_background.png"); -fx-background-size: cover; -fx-background-position: center; -fx-background-radius: 20;'>
         <Label text="STORY MODE"
           style='-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 8, 0, 0, 3);'
           StackPane.alignment="BOTTOM_CENTER"/>
          </StackPane>
      </VBox>

        <!-- Event -->
        <VBox fx:id="eventBox" alignment="CENTER" spacing="15" prefWidth="280.0" prefHeight="420.0"
          onMouseClicked="#openEvent"
          style='-fx-background-color: transparent; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 5); -fx-cursor: hand;'>
                    <StackPane prefWidth="260.0" prefHeight="360.0"
                               style='-fx-background-image: url("/backgrounds/event_background.png"); -fx-background-size: cover; -fx-background-position: center; -fx-background-radius: 20;'>
                        <Label text="EVENT"
                               style='-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 8, 0, 0, 3);'
                               StackPane.alignment="BOTTOM_CENTER"/>
                    </StackPane>
                </VBox>

                <!-- Classic -->
                <VBox alignment="CENTER" spacing="15" prefWidth="280.0" prefHeight="420.0"
                      onMouseClicked="#openClassic"
                      style='-fx-background-color: transparent; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 5); -fx-cursor: hand;'>
                    <StackPane prefWidth="260.0" prefHeight="360.0"
                               style='-fx-background-image: url("/backgrounds/classicmode_background.png"); -fx-background-size: cover; -fx-background-position: center; -fx-background-radius: 20;'>
                        <Label text="CLASSIC"
                               style='-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 8, 0, 0, 3);'
                               StackPane.alignment="BOTTOM_CENTER"/>
                    </StackPane>
                </VBox>

                <!-- Asia -->
                <VBox alignment="CENTER" spacing="15" prefWidth="280.0" prefHeight="420.0"
                      onMouseClicked="#openAsia"
                      style='-fx-background-color: transparent; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 5); -fx-cursor: hand;'>
                    <StackPane prefWidth="260.0" prefHeight="360.0"
                               style='-fx-background-image: url("/backgrounds/asianmode_background.png"); -fx-background-size: cover; -fx-background-position: center; -fx-background-radius: 20;'>
                        <Label text="ASIA"
                               style='-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-color: rgba(0,0,0,0.5); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 8, 0, 0, 3);'
                               StackPane.alignment="BOTTOM_CENTER"/>
                    </StackPane>
                </VBox>

            </HBox>
        </content>
    </ScrollPane>

    <!-- Bottom section with Back button and User info (same as SelectEvent) -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          AnchorPane.bottomAnchor="30.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0">

    <!-- Back button -->
    <Button fx:id="backButton" text="BACK" onAction="#handleBack"
        prefWidth="140.0" prefHeight="45.0"
        style='-fx-background-color: #2a5a9f; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 3);'>
      <cursor>
        <javafx.scene.Cursor fx:constant="HAND"/>
      </cursor>
    </Button>

        <Region HBox.hgrow="ALWAYS"/>

        <Text text="Signed in as: Player"
              style='-fx-font-size: 15px; -fx-fill: white; -fx-font-weight: bold;' />
    </HBox>

</AnchorPane>
