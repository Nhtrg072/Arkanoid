<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="708" prefWidth="1148" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="event.treasurehunter.controller.TreasureHunterController">
    <!-- LEFT SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="260" spacing="12" style="-fx-padding:16; -fx-background-color: #2d1810; -fx-border-color: #FFD700; -fx-border-width: 3; -fx-border-style: solid;">
            <!-- Top: Title -->
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="205.0" style="-fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-font-size: 18;" text="TREASURE HUNTER" />

            <!-- Instructions -->
            <VBox prefWidth="220" spacing="6" style="-fx-background-color:#1a0f0f; -fx-border-color:#8b5cf6; -fx-border-radius:6; -fx-padding:10; -fx-border-width:2; -fx-background-radius:6;">
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="278.0" style="-fx-text-fill: #8b5cf6; -fx-font-weight: bold; -fx-font-size: 18;" text="MISSION">
               <font>
                  <Font size="18.0" />
               </font></Label>
                <Label alignment="CENTER" prefHeight="16.0" prefWidth="226.0" style="-fx-text-fill: #FFD700; -fx-font-size: 15; -fx-wrap-text: true;" text="COLLECT ALL TREASURES!" wrapText="true" />
                <Label alignment="CENTER" prefHeight="15.0" prefWidth="217.0" style="-fx-text-fill: white; -fx-font-size: 12; -fx-wrap-text: true;" text="Pro like a pirate!" wrapText="true" />
            </VBox>

            <!-- Score box -->
            <VBox prefWidth="220" spacing="6" style="-fx-background-color:#1a0f0f; -fx-border-color:#FFD700; -fx-border-radius:6; -fx-padding:10; -fx-border-width:2; -fx-background-radius:6;">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label alignment="CENTER_LEFT" style="-fx-text-fill:#FFD700; -fx-font-weight:bold;" text="SCORE">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="scoreLabel" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="0" />
                </HBox>
            </VBox>

            <!-- Lives box -->
            <VBox prefHeight="47.0" prefWidth="222.0" spacing="6" style="-fx-background-color:#1a0f0f; -fx-border-color:#ff6b6b; -fx-border-radius:6; -fx-padding:10; -fx-border-width:2; -fx-background-radius:6;">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label alignment="CENTER_LEFT" style="-fx-text-fill:#ff6b6b; -fx-font-weight:bold;" text="LIVES">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="livesLabel" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" text="3" />
                </HBox>
            </VBox>

            <!-- Level box -->
            <VBox prefWidth="220" spacing="6" style="-fx-background-color:#1a0f0f; -fx-border-color:#4ecdc4; -fx-border-radius:6; -fx-padding:10; -fx-border-width:2; -fx-background-radius:6;">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label alignment="CENTER_LEFT" style="-fx-text-fill:#4ecdc4; -fx-font-weight:bold;" text="LEVEL">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="levelLabel" alignment="CENTER_RIGHT" style="-fx-text-fill:white; -fx-font-size:20; -fx-font-weight:bold;" text="1" />
                </HBox>
            </VBox>

            <!-- Coins box (emphasized for this event) -->
            <VBox prefWidth="220" spacing="6" style="-fx-background-color:#1a0f0f; -fx-border-color:#FFD700; -fx-border-radius:6; -fx-padding:10; -fx-border-width:3; -fx-background-radius:6;">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label alignment="CENTER_LEFT" style="-fx-text-fill:#FFD700; -fx-font-weight:bold; -fx-font-size: 16;" text="ðŸ’° COINS">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="coinsLabel" alignment="CENTER_RIGHT" style="-fx-text-fill:#FFD700; -fx-font-size:22; -fx-font-weight:bold;" text="0" />
                </HBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />
            
            <!-- Hint label -->
            <Label fx:id="hintLabel" alignment="CENTER" prefWidth="220" style="-fx-text-fill:#FFD700; -fx-font-size: 10; -fx-wrap-text: true;" text="" wrapText="true" />

            <Region prefHeight="8" />

            <!-- Control buttons -->
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="228.0" spacing="8">
                <Button fx:id="backButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="105.0" style="-fx-background-color:#1a0f0f; -fx-border-color:#FFD700; -fx-border-radius:6; -fx-padding:8; -fx-text-fill:#FFD700; -fx-font-weight:bold;" text="â—€ ">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Button>
                <Button fx:id="pauseButton" mnemonicParsing="false" prefHeight="54.0" prefWidth="105.0" style="-fx-background-color:#1a0f0f; -fx-border-color:#FFD700; -fx-border-radius:6; -fx-padding:8; -fx-text-fill:#FFD700; -fx-font-weight:bold;" text="â¸">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </left>

    <!-- CENTER - Game Area -->
    <center>
        <AnchorPane fx:id="anchorPane" prefHeight="708" prefWidth="888" style="-fx-background-color: linear-gradient(to bottom, #1a0f0f 0%, #2d1810 50%, #1a0f0f 100%); -fx-border-color: #FFD700; -fx-border-width: 3; -fx-border-style: solid;">
            <!-- Paddle - Golden treasure chest style (wider and taller for better skin display) -->
            <Rectangle fx:id="paddle" arcHeight="10" arcWidth="10" fill="#DAA520" height="20" width="120" x="384" y="648" />
            <!-- Ball - Golden ball (larger for better skin display) -->
            <Circle fx:id="ball" centerX="444" centerY="628" fill="#FFD700" radius="12" />
        </AnchorPane>
    </center>

</BorderPane>
