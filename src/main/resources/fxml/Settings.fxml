<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/17"
       xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="controller.SettingsController"
       alignment="CENTER"
       spacing="20"
       style="-fx-background-color: #1a1a2e;">

       <padding>
              <Insets top="30" right="50" bottom="30" left="50" />
       </padding>

       <!-- Title -->
       <Label text="âš™ï¸ SETTINGS" styleClass="title-label">
              <font>
                     <Font name="Arial Bold" size="36" />
              </font>
              <style>
                     -fx-text-fill: #ffffff;
              </style>
       </Label>

       <Region VBox.vgrow="ALWAYS" minHeight="20" />

       <!-- Sound Settings Panel -->
       <VBox spacing="15"
              style="-fx-background-color: #16213e; -fx-background-radius: 10; -fx-padding: 20;">

              <Label text="ðŸ”Š Sound Settings"
                     style="-fx-text-fill: #00d9ff; -fx-font-size: 20px; -fx-font-weight: bold;" />

              <Separator style="-fx-background-color: #00d9ff;" />

              <!-- Sound Effects Enable/Disable -->
              <HBox alignment="CENTER_LEFT" spacing="10">
                     <CheckBox fx:id="soundEnabledCheckbox" text="Enable Sound Effects"
                            style="-fx-text-fill: white; -fx-font-size: 14px;"
                            selected="true" />
              </HBox>

              <!-- Sound Volume -->
              <VBox spacing="5">
                     <Label text="Sound Volume" style="-fx-text-fill: #aaaaaa; -fx-font-size: 14px;" />
                     <Slider fx:id="soundVolumeSlider" min="0" max="100" value="70"
                            showTickLabels="false" showTickMarks="false"
                            style="-fx-control-inner-background: #0f3460;" />
              </VBox>

              <!-- Music Enable/Disable -->
              <HBox alignment="CENTER_LEFT" spacing="10">
                     <CheckBox fx:id="musicEnabledCheckbox" text="Enable Background Music"
                            style="-fx-text-fill: white; -fx-font-size: 14px;"
                            selected="true" />
              </HBox>

              <!-- Music Volume -->
              <VBox spacing="5">
                     <Label text="Music Volume" style="-fx-text-fill: #aaaaaa; -fx-font-size: 14px;" />
                     <Slider fx:id="musicVolumeSlider" min="0" max="100" value="50"
                            showTickLabels="false" showTickMarks="false"
                            style="-fx-control-inner-background: #0f3460;" />
              </VBox>

       </VBox>

       <!-- Game Settings Panel -->
       <VBox spacing="15"
              style="-fx-background-color: #16213e; -fx-background-radius: 10; -fx-padding: 20;">

              <Label text="ðŸŽ® Game Settings"
                     style="-fx-text-fill: #00d9ff; -fx-font-size: 20px; -fx-font-weight: bold;" />

              <Separator style="-fx-background-color: #00d9ff;" />

              <!-- Difficulty -->
              <VBox spacing="5">
                     <Label text="Difficulty" style="-fx-text-fill: #aaaaaa; -fx-font-size: 14px;" />
                     <ComboBox fx:id="difficultyCombo" prefWidth="200"
                            style="-fx-background-color: #0f3460; -fx-text-fill: white;">
                            <items>
                                   <javafx.collections.FXCollections
                                          fx:factory="observableArrayList">
                                          <String fx:value="Easy" />
                                          <String fx:value="Normal" />
                                          <String fx:value="Hard" />
                                   </javafx.collections.FXCollections>
                            </items>
                     </ComboBox>
              </VBox>

       </VBox>

       <Region VBox.vgrow="ALWAYS" minHeight="20" />

       <!-- Back Button -->
       <Button text="â¬…ï¸ Back to Menu"
              onAction="#backToMenu"
              prefWidth="200"
              prefHeight="50"
              style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;">
              <cursor>
                     <javafx.scene.Cursor fx:constant="HAND" />
              </cursor>
       </Button>

</VBox>